<% layout("layouts/boilerplate"); %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create listing:</h3>
      <br />
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label"> Title: </label>
          <input
            type="text"
            name="listing[title]"
            class="form-control"
            required
            placeholder="Enter title"
          />
          <div class="valid-feedback">Title looks good</div>
          <div class="invalid-feedback">Enter a valid title please</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"> Description: </label>
          <textarea
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a shorter description</div>
        </div>

        <!-- <div class="mb-3">
          <label for="image" class="form-label">Image link:</label>
          <input
            type="text"
            name="listing[image]"
            class="form-control"
            placeholder="Enter image url/Link"
          />
        </div> -->

        <div class="mb-3">
          <label for="image" class="form-label">Upload listing image:</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            placeholder="Enter image url/Link"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label"> Price: </label>
            <input
              name="listing[price]"
              required
              class="form-control"
              placeholder="Enter price"
            />
            <div class="invalid-feedback">Enter valid amount</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label"> Country: </label>
            <input
              type="text"
              name="listing[country]"
              class="form-control"
              required
              placeholder="Enter country"
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label"> Location: </label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            required
            placeholder="Enter location"
          />
          <div class="invalid-feedback">Please enter valid location</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add listing</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
