<% layout("layouts/boilerplate"); %>

<div class="row mt-3">
  <h1 class="offset-3 mb-4">SignUp on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form method="POST" action="/login" novalidate class="needs-validation ">

      <div class="mb-4">
          <label for="username" class="form-label">
              Username:
          </label>
          <input type="text" name="username" class="form-control" id="username" required placeholder="Enter username">

      </div>
      
      <div class="mb-4">
          <label for="password" class="form-label">
              Password:
          </label>
          <input type="password" name="password" class="form-control" id="password" required placeholder="Enter password">
      </div>

      <button class="btn btn-primary">
        Login
      </button>
    </form>
  </div>
</div>