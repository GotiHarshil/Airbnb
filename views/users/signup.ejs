<% layout("layouts/boilerplate"); %>

<div class="row mt-3">
  <h1 class="offset-3 mb-4">SignUp on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form method="POST" action="/signup" novalidate class="needs-validation ">

      <div class="mb-4">
          <label for="username" class="form-label">
              Username:
          </label>
          <input type="text" name="username" class="form-control" id="username" required placeholder="Enter username">

          <div class="valid-feedback">Username looks good</div>
          <div class="invalid-feedback">Enter a valid username please</div>
      </div>
      
      <div class="mb-4">
          <label for="email" class="form-label">
              Email:
          </label>
          <input type="text" name="email" required class="form-control" id="email"  placeholder="Enter mail Id">
      </div>
      
      <div class="mb-4">
          <label for="password" class="form-label">
              Password:
          </label>
          <input type="password" name="password" class="form-control" id="password" required placeholder="Enter password">
      </div>

      <button class="btn btn-success">
        Sign Up
      </button>
    </form>
  </div>
</div>